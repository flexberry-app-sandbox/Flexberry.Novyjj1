<h3 class="ui header">{{t "forms.i-i-s-novyjj1-планиров-с-м-р-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-novyjj1-планиров-с-м-р-e.номенклатура-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.номенклатура
      relationName="номенклатура"
      projection="НоменклатураL"
      title=(t "forms.i-i-s-novyjj1-планиров-с-м-р-e.номенклатура-caption")
      readonly=readonly
      componentName="номенклатураLookup"
      class=(if (v-get validationModel "номенклатура" "isInvalid") "error")
      data-test-i-i-s-novyjj1-планиров-с-м-р-e-номенклатура=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номенклатура" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.номенклатура.наимРабот
      class=(if (v-get validationModel.номенклатура "наимРабот" "isInvalid") "error")
      label=(t "forms.i-i-s-novyjj1-планиров-с-м-р-e.номенклатура.наимРабот-caption")
      data-test-i-i-s-novyjj1-планиров-с-м-р-e-номенклатура-наимРабот=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.номенклатура "наимРабот" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.кодСДР
      class=(if (v-get validationModel "кодСДР" "isInvalid") "error")
      label=(t "forms.i-i-s-novyjj1-планиров-с-м-р-e.кодСДР-caption")
      data-test-i-i-s-novyjj1-планиров-с-м-р-e-кодСДР=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "кодСДР" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-novyjj1-планиров-с-м-р-e.датаНачала-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаНачала
      class=(if (v-get validationModel "датаНачала" "isInvalid") "error")
      data-test-i-i-s-novyjj1-планиров-с-м-р-e-датаНачала=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаНачала" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-novyjj1-планиров-с-м-р-e.датаОкончания-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаОкончания
      class=(if (v-get validationModel "датаОкончания" "isInvalid") "error")
      data-test-i-i-s-novyjj1-планиров-с-м-р-e-датаОкончания=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаОкончания" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.длительность
      class=(if (v-get validationModel "длительность" "isInvalid") "error")
      label=(t "forms.i-i-s-novyjj1-планиров-с-м-р-e.длительность-caption")
      data-test-i-i-s-novyjj1-планиров-с-м-р-e-длительность=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "длительность" "message")}}
  </div>
</form>
