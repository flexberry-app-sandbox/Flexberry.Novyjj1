      data-test-i-i-s-novyjj1-от-о-рас-ос-мат-e-нормРасх=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "нормРасх" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.колПоАкт
