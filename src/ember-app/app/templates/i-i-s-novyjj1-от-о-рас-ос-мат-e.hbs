<h3 class="ui header">{{t "forms.i-i-s-novyjj1-от-о-рас-ос-мат-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-novyjj1-от-о-рас-ос-мат-e.едИзмер-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.едИзмер
      relationName="едИзмер"
      projection="ЕдИзмерL"
      title=(t "forms.i-i-s-novyjj1-от-о-рас-ос-мат-e.едИзмер-caption")
      readonly=readonly
      componentName="едИзмерLookup"
      class=(if (v-get validationModel "едИзмер" "isInvalid") "error")
      data-test-i-i-s-novyjj1-от-о-рас-ос-мат-e-едИзмер=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "едИзмер" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.едИзмер.наименование
      class=(if (v-get validationModel.едИзмер "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-novyjj1-от-о-рас-ос-мат-e.едИзмер.наименование-caption")
      data-test-i-i-s-novyjj1-от-о-рас-ос-мат-e-едИзмер-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.едИзмер "наименование" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.нормРасх
      class=(if (v-get validationModel "нормРасх" "isInvalid") "error")
